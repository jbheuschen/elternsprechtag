{% extends 'base.html.twig' %}

{% block title %}Slot index{% endblock %}

{% block body %}
    <h1>Slot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SlotBegin</th>
                <th>SlotEnd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slot in slots %}
            <tr>
                <td>{{ slot.id }}</td>
                <td>{{ slot.slotBegin ? slot.slotBegin|date('H:i:s') : '' }}</td>
                <td>{{ slot.slotEnd ? slot.slotEnd|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('slot_show', {'id': slot.id}) }}">show</a>
                    <a href="{{ path('slot_edit', {'id': slot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('slot_new') }}">Create new</a>
{% endblock %}
